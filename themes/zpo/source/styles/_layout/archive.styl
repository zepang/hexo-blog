#archives-page
  ul 
    li
      a
        color primary-color
      a:hover
        color highlight-color

#tabs
  .tab
    position relative
    cursor pointer
  .tab.is_active
    color highlight-color
  .tab.is_active:after
    content ''
    display inline-block
    width 100%
    height 2px
    background-color highlight-color
    position absolute
    bottom 0
    left 0
    right 0
