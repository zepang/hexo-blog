#post-page
  #post-aside
    min-width 220px
    transition min-width .25s ease-in-out
  #post-aside.hide
    min-width 0
    width 0
    overflow hidden
    padding 0
    bottom 0

  #post-aside.hide + div #toc-toggle-btn
    color highlight-color

.markdown-article
  footer
    .post-next 
      text-align right
    .post-prev, .post-next 
      max-width 50%
      a
        display block
        overflow: hidden; 
        text-overflow: ellipsis;
        white-space: nowrap;

#post-toc
  position sticky
  top 60px
  .toc-child
    padding .5em 0 
  .toc-text
    overflow: hidden; 
    text-overflow: ellipsis;
    white-space: nowrap;
  .toc-text, .toc-number 
    font-size 14px
    color #192125
    &:hover 
      color #00C6AA