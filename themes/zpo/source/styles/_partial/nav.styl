#page-nav-wrapper 
  width 100%
  height 80px
  background-color transparent
  position: absolute
  top 0
  z-index 500

  .nav-list
    height 100%
    display flex
    align-items center
    margin 0
    padding 0 4em

    .nav-item
      margin-right: 2em;
      list-style none

      a
        padding 2em 0
        color: #fff
        text-decoration none

      a:not(.logo) {
        font-family: "Open Sans", Helvetica, sans-serif;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: .25rem;
        font-weight 600
      }

      a.logo 
        font-family "aAdistro"
        font-size 26px

    .nav-item:nth-child(2)
      margin-left auto